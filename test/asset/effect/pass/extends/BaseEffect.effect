            },

            "vertexShader" : "#pragma include \"../../dummy.glsl\"",
            "fragmentShader" : "#pragma include \"../../dummy.glsl\""
        }]
    },
    {
        "name" : "base-technique-2",
        "passes" : [{
           "name" : "base-pass-2",

            "attributes" : {
                "aPosition" : "geometry[${geometryUuid}].position2"
            },

            "macros" : {
                "BAR" : { "binding" : "foo", "type" : "int", "default" : 24 }
            },

            "uniforms" : {
